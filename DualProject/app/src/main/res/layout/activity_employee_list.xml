<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EmployeeListActivity">

    <ListView
        android:id="@+id/data_loader_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonemployee"
        android:layout_width="@dimen/floating_width"
        android:layout_height="@dimen/floating_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/design_default_color_primary"
        android:foreground="@drawable/ic_action_name"
        android:layout_marginRight="@dimen/action_btn_right_margin"
        android:layout_marginBottom="@dimen/action_btn_bottom_margin"
        tools:srcCompat="@drawable/ic_action_name" />

</RelativeLayout>

